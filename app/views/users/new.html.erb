<div class="row">
  <div class="col-sm-12">
    <h2> Create/Edit a User </h2>
  </div>
</div>

<%= form_for(user, html: { class: 'form-horizontal' }) do |f| %>
<div class="form-group">
  <div class="col-sm-2">
    <label>Name</label>
  </div>
  <div class="col-sm-10">
    <%= f.text_field :name %>
  </div>
</div>


<div class="form-group">
  <div class="col-sm-2">
    <label>E-mail</label>
  </div>
  <div class="col-sm-10">
    <%= f.text_field :email %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-12">
    <%= f.submit(form_action, class: 'btn btn-primary btn-lg' ) %>
  </div>
</div>

<% end %>
